# Configurações do Servidor
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS - Origins permitidas (separadas por vírgula)
CORS_ORIGINS=*
# Para produção, especifique domínios:
# CORS_ORIGINS=http://localhost:3000,https://meudominio.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutos em ms
RATE_LIMIT_MAX=100        # Máximo de requests por janela

# Configurações de Cache
CACHE_MAX_SIZE=10000      # Máximo de itens no cache
CACHE_DEFAULT_TTL=1800000 # TTL padrão em ms (30 minutos)
CACHE_CLEANUP_INTERVAL=300000 # Intervalo de limpeza em ms (5 minutos)

# Configurações de Sessão
SESSION_SECRET=sua_chave_secreta_aqui
SESSION_MAX_AGE=86400000  # 24 horas em ms

# Configurações de Log
LOG_LEVEL=info            # debug, info, warn, error
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760     # 10MB
LOG_MAX_FILES=5

# Configurações WhatsApp
WA_BROWSER_NAME=BZap
WA_BROWSER_VERSION=1.0.0
WA_PLATFORM=web
WA_PRINT_QR_TERMINAL=true
WA_QR_TIMEOUT=60000       # Timeout do QR em ms (1 minuto)

# Configurações de Webhook (opcional)
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=5000      # Timeout em ms
WEBHOOK_RETRY_ATTEMPTS=3

# Configurações de Proxy (opcional)
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Configurações de Banco de Dados (futuro)
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bzap
DB_USERNAME=
DB_PASSWORD=
DB_SSL=false

# Configurações de Segurança
JWT_SECRET=sua_jwt_secret_super_segura_aqui
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=sua_chave_de_criptografia_32_chars

# Configurações de Upload (futuro)
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg
UPLOAD_PATH=uploads

# Configurações de Performance
MAX_INSTANCES=50          # Máximo de instâncias simultâneas
MAX_CONNECTIONS_PER_INSTANCE=10
HEARTBEAT_INTERVAL=30000  # Intervalo de heartbeat em ms
CONNECTION_TIMEOUT=30000  # Timeout de conexão em ms

# Configurações de Monitoramento
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000 # Intervalo de health check em ms

# Configurações de Desenvolvimento
DEBUG=bzap:*
HOT_RELOAD=true
API_DOCS_ENABLED=true